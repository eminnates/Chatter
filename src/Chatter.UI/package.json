{
  "name": "chatter",
  "private": true,
  "version": "1.0.1",
  "description": "Chatter Real-time Chat Application",
  "author": {
    "name": "Emin Ates",
    "email": "mhmtmn1800@gmail.com"
  },
  "homepage": "https://github.com/eminnates/Chatter",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:build": "npm run build && electron-builder --win --linux",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "android:sync": "npm run build && npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run android:sync && cd android && ./gradlew assembleRelease",
    "android:build:debug": "npm run android:sync && cd android && ./gradlew assembleDebug"
  },
  "build": {
    "appId": "com.chatter.app",
    "productName": "Chatter",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.js",
      "electron/preload.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "pacman",
        "deb"
      ],
      "maintainer": "Emin Ates <mhmtmn1800@gmail.com>",
      "category": "Chat"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Chatter"
    }
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^8.0.0",
    "@microsoft/signalr": "^8.0.0",
    "axios": "^1.6.0",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-peer": "^9.11.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "wait-on": "^7.0.0"
  }
}
